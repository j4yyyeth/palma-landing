---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main>
    <section class="hero">
      <div class="icon-text">
        <div class="icon-wrapper">
          <img src="/images/palma-logo.svg" style="height: 50px;" />
          <img src="/images/expo-logo.png" style="height: 80px;" />
        </div>
        <h1 class="hero-text">Win a Trip to Miami Beach</h1>
      </div>
    </section>

    <section class="form-section">
      <h2>Register to Win a Trip to Miami Beach</h2>
      <form id="contest-form">
        <div class="form-field">
          <input type="text" name="name" placeholder="NAME:" required />
        </div>

        <div class="form-field">
          <input type="text" name="company" placeholder="COMPANY:" required />
        </div>

        <div class="form-field">
          <input type="email" name="email" placeholder="E-MAIL:" required />
        </div>

        <div class="form-field">
          <input type="tel" name="phone" placeholder="PHONE:" required />
        </div>

        <button type="submit" class="submit-btn">SUBMIT</button>
      </form>

      <div id="form-messages" class="form-messages" style="display: none;">
        <p id="message-text"></p>
      </div>

      <div class="socials">
        <p>Follow us to Enter to Win</p>
        <div class="handles">
          <a target="_blank" href="https://www.instagram.com/leffertsinvestments/">@LeffertsInvestments</a><a target="_blank" href="https://www.instagram.com/palmamiamibeach/">@PalmaMiamiBeach</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');

  @font-face {
    font-family: didot-italic;
    src: url('/fonts/didot-italic.ttf') format('truetype');
    font-display: swap;
  }

  @font-face {
    font-family: didot-headline;
    src: url('/fonts/didot-headline.ttf') format('truetype');
    font-display: swap;
  }

  * {
    margin: 0;
    padding: 0;
  }

  body,
  html {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    background: #fef7f1;
    font-family: 'Montserrat', sans-serif;
    overflow-x: hidden;
    scroll-behavior: smooth;
  }

  body {
    scrollbar-width: none;
    -ms-overflow-style: none;
    overflow-y: scroll;
  }

  body::-webkit-scrollbar {
    display: none;
  }

  .hero {
    background-image: url('/images/sunset.webp');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 50vh;
    color: #ffffff;
    font-family: 'didot-italic', sans-serif;
    font-weight: 100;
    display: flex;
    justify-content: flex-end;
    padding: 0 2rem;
  }

  @media screen and (max-device-width: 1024px) {
    .hero {
      background-attachment: scroll;
    }
  }

  .icon-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    max-width: 400px;
    margin-top: 3rem;
  }

  .icon-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .icon-wrapper img {
    height: 60px;
    transition: transform 0.3s ease;
  }

  .icon-wrapper img:hover {
    transform: scale(1.05);
  }

  .hero-text {
    font-size: 70px;
    font-weight: 100;
    text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }

  .form-section {
    color: #6c8a7c;
    text-align: center;
    padding: 2.5rem 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    background-image: url('/images/leaves.png');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }

  .form-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(254, 247, 241, 0.85);
    z-index: 1;
  }

  .form-section > * {
    position: relative;
    z-index: 2;
  }

  .form-section h2 {
    font-size: 27px;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 2px;
    word-spacing: 3px;
    margin: 0 auto 0.5rem auto;
    width: 90%;
  }

  form {
    max-width: 600px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 0 auto;
  }

  .form-field {
    position: relative;
  }

  input[type='text'],
  input[type='email'],
  input[type='tel'] {
    width: 100%;
    border-radius: 50px;
    background-color: transparent;
    outline: none;
    padding: 5px 20px;
    box-sizing: border-box;
    transition: all 0.3s ease-in-out;
    border: 1.5px solid #6e8a7c;
    color: #6e8a7c;
    text-transform: uppercase;
    font-size: 22px;
    font-weight: 200;
    font-family: 'Montserrat', sans-serif;
  }

  input[type='text']::placeholder,
  input[type='email']::placeholder,
  input[type='tel']::placeholder {
    color: #6e8a7c;
    text-transform: uppercase;
    font-size: 22px;
    font-weight: 200;
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 3px;
  }

  input[type='text']:focus,
  input[type='email']:focus,
  input[type='tel']:focus {
    border-color: #7a9b8a;
    transform: scale(1.02);
  }

  .submit-btn {
    background-color: #6b8a7a;
    color: #fef7f1;
    border: none;
    border-radius: 50px;
    padding: 10px 60px;
    font-size: 30px;
    text-transform: uppercase;
    font-weight: 200;
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 3px;
    letter-spacing: 3px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    margin-top: 1rem;
    align-self: center;
    min-width: 200px;
  }

  .submit-btn:hover {
    background-color: #7a9b8a;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(122, 155, 138, 0.3);
  }

  .submit-btn:active {
    transform: translateY(0);
    box-shadow: 0 4px 15px rgba(122, 155, 138, 0.3);
  }

  .submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .form-messages {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease-in-out;
  }

  .form-messages.success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .form-messages.error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .socials {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 22px;
    text-transform: uppercase;
    font-weight: 600;
  }

  .handles {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;
  }

  .handles a {
    transition: color 0.3s ease-in-out;
    cursor: pointer;
    text-decoration: none;
    color: #6e8a7c;;
  }

  .handles a:hover {
    color: #7a9b8a;
  }

  @media (max-width: 650px) {
    .hero {
      justify-content: center;
      height: 40vh;
    }
    .icon-text {
      justify-content: center;
      margin: 0 auto;
      text-align: center;
    }
    .hero-text {
      font-size: 50px;
    }
    .socials {
      font-size: 16px;
    }
    .form-section h2 {
      font-size: 20px;
      text-align: center;
      margin: 0 auto 0.5rem auto;
    }
    form {
      width: 90%;
    }
    input[type='text'],
    input[type='email'],
    input[type='tel'],
    input[type='text']::placeholder,
    input[type='email']::placeholder,
    input[type='tel']::placeholder {
      font-size: 16px;
    }
    .submit-btn {
      font-size: 22px;
    }
  }

  @media (max-width: 475px) {
    .handles {
      flex-direction: column;
    }
    .socials {
      gap: 0.3rem;
    }
    .socials > p {
      margin-bottom: 1rem;
    }
  }

  @media screen and (min-device-width: 768px) and (max-device-width: 1024px) {
    .submit-btn,
    input[type='text'],
    input[type='email'],
    input[type='tel'] {
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }

    body {
      -webkit-overflow-scrolling: touch;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('contest-form');
    const submitBtn = form.querySelector('.submit-btn');
    const messagesDiv = document.getElementById('form-messages');
    const messageText = document.getElementById('message-text');

    function showMessage(message, isSuccess = true) {
      messageText.textContent = message;
      messagesDiv.className = `form-messages ${isSuccess ? 'success' : 'error'}`;
      messagesDiv.style.display = 'block';

      messagesDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });

      if (isSuccess) {
        setTimeout(() => {
          messagesDiv.style.display = 'none';
        }, 5000);
      }
    }

    function resetForm() {
      form.reset();
    }

    form.addEventListener('submit', async function (e) {
      e.preventDefault();

      submitBtn.disabled = true;
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'SUBMITTING...';

      messagesDiv.style.display = 'none';

      try {
        const formData = new FormData(form);
        const data = {
          name: formData.get('name'),
          company: formData.get('company'),
          email: formData.get('email'),
          phone: formData.get('phone'),
        };

        const response = await fetch('/form-handler.php', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          const textResponse = await response.text();
          console.error('Non-JSON response:', textResponse);
          throw new Error('Server returned non-JSON response');
        }

        const result = await response.json();

        if (response.ok && result.success) {
          showMessage(
            result.message ||
              'Thank you! Your entry has been submitted successfully!',
            true
          );
          resetForm();
        } else {
          showMessage(
            result.error ||
              'There was an error submitting your entry. Please try again.',
            false
          );
        }
      } catch (error) {
        console.error('Submission error:', error);
        let errorMessage = 'Network error. ';

        if (error.name === 'TypeError' && error.message.includes('fetch')) {
          errorMessage +=
            'Please check your internet connection and try again.';
        } else if (error.message.includes('JSON')) {
          errorMessage += 'Please try again.';
        } else {
          errorMessage += 'Please try again later.';
        }

        showMessage(errorMessage, false);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  });
</script>
